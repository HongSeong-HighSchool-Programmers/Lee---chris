Public Class 예제
    Private Sub Button1_Click(sender As Object, e As EventArgs) Handles Button1.Click
        Dim score As Integer
        score = 0
        If 문제1번.Text = "2x + 1" Then
            score = score + 1
        End If

        If 문제2번.Text = "7" Then
            score = score + 1
        End If

        If 문제3번.Text = "e^x * 3^x * ln(3) + e^x * 3^x" Or 문제3번.Text = "e^x * 3^x + e^x * 3^x * ln(3)" Then
            score = score + 1
        End If

        If score = 3 Then
            히든.Show()
        Else
            노말.Show()
        End If
        Me.Hide()
    End Sub

End Class
